package com.findmyfood;

import java.sql.ResultSet;
import java.sql.ResultSetMetaData;
import java.sql.SQLException;
import java.util.ArrayList;

import javafx.collections.FXCollections;
import javafx.collections.ObservableList;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.control.ComboBox;
import javafx.scene.control.Slider;
import javafx.scene.control.TextArea;
import javafx.scene.control.TextField;
import javafx.scene.layout.AnchorPane;

public class Controller {
	
	@FXML 
	private TextArea outputArea; 
	@FXML 
	private TextField location; 
	@FXML
	private ComboBox<String> cuisine; 
	@FXML 
	private Button submit;
	private ObservableList<String> cuisineComboBoxData = FXCollections.observableArrayList(); 
	
	@FXML
	private Slider rating; 
	
	public Controller()  {
		
	}
	
	@FXML
	private void initialize() { 
		ArrayList<String> cuisines = MainApp.findDistinctCuisines(); 
		for(String cuisine : cuisines) { 
			cuisineComboBoxData.add("Indian"); 
		}
		cuisine.getItems.addAll("Indian", "American"); 
	}
	
	public String getLocation() { 
		return location.getText(); 
	}
	
	public String getCuisine() { 
		return cuisine.getValue(); 
	}
	
	public int getRating() { 
		return (int)rating.getValue(); 
	}
	
	private void handleSearch() {
		ResultSet rs = MainApp.submit(getLocation(), getCuisine(), getRating()); 
		try {
			ResultSetMetaData meta = rs.getMetaData(); 
			int columnCount = meta.getColumnCount(); 
			if(rs!=null) {
				while(rs.next()) {
					String result = ""; 
					for(int i = 1; i <= columnCount; i++) {
						result += rs.getString(i) + ","; 
					}
					outputArea.appendText(result);
				}
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	
}
